{% extends 'layout.twig' %}

{% block body %}

 <section class="pt-2 concept">
    
    <h1 class="text-center text-white">Le <span class="font-weight-bold text-primary">réseau social</span> crée par des metaleux, pour les metaleux !</h1>
    
  </section>
 <div class="row">

    <!-- Partie LogIn -->
    <div class="col-md-4 mb-3 offset-md-1 p-0">
      <div class="card bg-transparent text-white border border-primary">

        <!-- Header -->
        <header class="card-header d-flex justify-content-start">
          <h2 class="card-title mt-2">Connexion</h2>

          <!-- Bloc affichage du nombre de posts et d'utilisateurs inscrit-->
          <p class="text-center text-white" id="nbrePost"></p>
          <p class="text-center text-white" id="nbreUsers"></p>
          <!-- Fin bloc -->

        </header>
        <!-- Body -->
        <form method="POST" action="/">
        <article class="card-body mx-4 mt-0">
          <div class=" form-group pb-2">
            <label for="mail" class="p-0">Votre email</label>
            <input type="email" name="mail" id="mail" class="form-control">
          </div>
          <div class="form-group mb-3 pb-2">
            <label for="motDePass" class="p-0">Votre mot de passe</label>
            <input type="password" name="password" id="motDePass" class="form-control">
            <small class="d-flex justify-content-end mt-2">Vous avez oublié votre <a href="/user/reinit" class="font-weight-bold ml-1">
                Mot
                de passe ?</a></small>
          </div>
          <div class="text-center mb-4">
            <input type="submit" class="btn couleur-bt btn-primary btn-block " value="Connexion">
          </div>         
        </article>
        </form>
      </div>
    </div>
    <!-- Fin partie logIn -->

    <!-- Partie Inscription -->
    <div class="col-md-4 offset-md-2 p-0 mb-5">
      <div class="card">
        <!-- Header -->
        <header class="card-header">
          <h2 class="card-title mt-2">Inscription</h2>
        </header>
        <!-- Body -->
        <article class="card-body pt-0">
          <form method="POST" action="/user/createCount" enctype="multipart/form-data">
            <div class="form-row">
              <div class="col form-group">
                <label>Prénom </label>
                <input type="text" name="prenom" class="form-control" placeholder="">
              </div>
              <div class="col form-group">
                <label>Nom</label>
                <input type="text" name="nom" class="form-control" placeholder=" ">
              </div>
              
            </div>
             <div class="form-group">
              <label>Votre date de naissance</label>
              <input type="date" name="birthDate" class="form-control">
            </div>
            <div class="form-group">
              <label>Email</label>
              <input type="email" name="email" class="form-control" placeholder="">
              <small class="form-text text-muted">Votre adresse électronique ne sera en aucun cas communiquée à des
                tiers ni utilisée à d'autres fins.</small>
            </div>
            <div class="form-group">
              <label class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="gender" value="Homme">
                <span class="form-check-label"> Homme </span>
              </label>
              <label class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="gender" value="Femme">
                <span class="form-check-label"> Femme</span>
              </label>
            </div>
            <div class="form-row">
              <div class="form-group col-sm-6">
                <label>Ville</label>
                <input type="text" name="ville" class="form-control">
              </div>
              <div class="form-group col-sm-6">
                <label>Pays</label>
                <select name="pays" id="inputState" class="form-control">
                  <option> Choisir...</option>
                  <option>Belgique</option>
                  <option>Canada</option>
                  <option selected="">France</option>
                  <option>Luxembourg</option>
                  <option>Suisse</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label>Créer un mot de passe</label>
              <input name="password" class="form-control" type="password">
            </div>
            <div class="form-group">
              <label>Confirmer votre mot de passe</label>
              <input name="Confpassword" class="form-control" type="password">
            </div>
            <div class="form-group">
              <label>Choisir votre photo de profil</label>
              <input name="upload" class="form-control" type="file">
            </div>
            <div class="form-group">
              <button type="submit" class="btn couleur-bt btn-primary btn-block"> Inscription </button>
            </div>
            <small class="text-muted"> En cliquant sur Inscription, vous acceptez nos Conditions générales.</small>
          </form>
        </article>
      </div>
    </div>


  </div>

{% endblock %}
